<UserControl x:Class="DarkWolfCraftSys.ui.DWC_DataGridCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DarkWolfCraftSys.ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid RowBackground="{Binding Path=RowBackground, FallbackValue=Aqua, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" VerticalGridLinesBrush="{Binding Path=GridLineBrush, FallbackValue=Red, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" HorizontalGridLinesBrush="{Binding Path=GridLineBrush, FallbackValue=Red, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" Name="DWC_DataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" Margin="0,0,0,126" Background="{Binding Path=GridCellContentBackgroundColor, FallbackValue=#333, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" Foreground="{Binding Path=GridCellContentTextColor, FallbackValue=#fff, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" ColumnHeaderHeight="32" FontSize="14" >

            <!-- Header Color -->
            <DataGrid.Resources>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="{Binding Path=GridCellHeaderBackgroundColor, FallbackValue=#FF444343, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" />
                    <Setter Property="Foreground" Value="{Binding Path=GridCellHeaderTextColor, FallbackValue=#fff, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" />
                </Style>
            </DataGrid.Resources>
            
            <!-- Header Grid Test -->
            <DataGridRowHeader Background="{Binding Path=GridCellHeaderBackgroundColor, FallbackValue=#FF444343, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}" Foreground="{Binding Path=GridCellHeaderTextColor, FallbackValue=#fff, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}"></DataGridRowHeader>
            
            <!-- DataGrid Content -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name"/>
                <DataGridTextColumn Header="Last Name"/>
                
                <DataGridHyperlinkColumn Header="Email"/>
                <DataGridCheckBoxColumn Header="Member since"/>
                <DataGridComboBoxColumn Header="Order Status"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
