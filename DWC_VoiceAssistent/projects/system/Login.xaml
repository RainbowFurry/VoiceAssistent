                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="0.653"/>
                            <RotateTransform/>
                            <TranslateTransform X="0.49"/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle Fill="#FF313136" HorizontalAlignment="Left" Height="37" Margin="141,223,0,0" RadiusY="12.697" RadiusX="12.697" Stroke="{x:Null}" VerticalAlignment="Top" Width="276" RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="0.653"/>
                            <RotateTransform/>
                            <TranslateTransform X="0.49"/>
