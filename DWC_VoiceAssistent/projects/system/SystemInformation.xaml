        <Grid x:Name="Printer" HorizontalAlignment="Left" Height="772" Margin="223,31,0,-31" VerticalAlignment="Top" Width="1053" Visibility="Hidden">
            <ScrollViewer HorizontalAlignment="Left" Height="772" VerticalAlignment="Top" Width="1053" VerticalScrollBarVisibility="Hidden">
                <StackPanel Height="772" Width="1053">
                    <Label x:Name="DWC_PrinterInformation" Content="Label" Foreground="White"/>
