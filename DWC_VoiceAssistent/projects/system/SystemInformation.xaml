                    <Label x:Name="DWC_CPUInformation" Content="Label" Foreground="White"/>
                </StackPanel>
            </ScrollViewer>
            <Grid HorizontalAlignment="Left" Height="175" VerticalAlignment="Top" Width="1053">
                <Rectangle HorizontalAlignment="Left" Height="155" Margin="16,10,0,0" RadiusY="9" RadiusX="9" Stroke="{x:Null}" VerticalAlignment="Top" Width="278" Fill="#FF37363F"/>
                <Label x:Name="DWC_CPUCore_Info1" Content="Label" HorizontalAlignment="Left" Margin="32,24,0,0" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="DWC_CPUCore_Info2" Content="Label" HorizontalAlignment="Left" Margin="159,24,0,0" VerticalAlignment="Top" Foreground="White"/>
            </Grid>
        </Grid>

        <Grid x:Name="Graphicscard" HorizontalAlignment="Left" Height="772" Margin="223,29,0,-29" VerticalAlignment="Top" Width="1053" Visibility="Hidden">
